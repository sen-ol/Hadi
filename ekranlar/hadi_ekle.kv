<AvatarButonu>:
    id: avatar
    source: 'ikonlar/eglence.png'
    size_hint: None, None
    pos_hint: {"center_x": .15, "center_y": .5}
    on_press:
        app.avatar_secildi(avatar)


MDScreen:
    id: hadi_ekle
    name: "Hadi_Ekle"
    hadi_girilen_isim: hadi_girilen_isim
    hadi_girilen_bilgi: hadi_girilen_bilgi
    avatar_secildi_popup: avatar_secildi_popup
    avatar_listesi: avatar_listesi
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "40sp"
            pos_hint: {"center_y": .95}
            theme_text_color: "Custom"
            text_color: 1, 170/255, 23/255, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "AnaEkran"
        MDLabel:
            text: 'Haydi ekle'
            pos_hint: {"center_x": .6, "center_y": .88}
            font_name: "Poppins-SemiBold.ttf"
            font_size: "30sp"
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .78}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: hadi_girilen_isim
                hint_text: "Başlık"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 1, 170/255, 23/255, 1
                cursor_width: "2sp"
                foreground_color: 1, 170/255, 23/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_name: "Poppins-SemiBold.ttf"
                font_size: "18sp"
        MDFloatLayout:
            size_hint: .85, .28
            pos_hint: {"center_x": .5, "center_y": .57}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: hadi_girilen_bilgi
                hint_text: "Açıklama:"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: 180
                cursor_color: 1, 170/255, 23/255, 1
                cursor_width: "2sp"
                foreground_color: 1, 170/255, 23/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_name: "Poppins-SemiBold.ttf"
                font_size: "18sp"
        ScrollView:
            do_scroll_x: True
            do_scroll_y: False
            pos_hint: {"center_x": .5, "center_y": .35}
            size_hint: 1, .12
            GridLayout:
                id: avatar_listesi
                spacing: 10
                rows: 1
                size_hint_x: None


        Button:
            text: "Haydi Ekle"
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .16}
            background_color: 0, 0, 0, 0
            font_name: "Poppins-SemiBold.ttf"
            font_size: "18sp"
            color: 1, 1, 1, 1
            on_release:
                app.hadi_ekle(hadi_girilen_isim.text, hadi_girilen_bilgi.text)
                app.on_start()
                root.manager.transition.direction = "right"
                root.manager.current = "Hadilerim"
            canvas.before:
                Color:
                    rgb: (1, 170/255, 23/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

        MDLabel:
            id: avatar_secildi_popup
            text: ""
            pos_hint: {"center_x": .9, "center_y": .08}